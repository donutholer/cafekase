  "strict_menu_enforcement": {
    "allowed_names_only": [
      "Summer Tonic",
      "Latte",
      "Maple Latte",
      "Matcha Latte",
      "Strawberry Matcha Latte",
      "Blueberry Matcha Latte",
      "Matcha Cloud"
    ],
    "common_hallucinations_to_prevent": [
      "Flat White",
      "Cappuccino",
      "Americano",
      "Espresso",
      "Yuzu Tonic",
      "Yuzu Espresso Tonic",
      "Hojicha Latte",
      "Chai Latte",
      "Mocha",
      "Cortado"
    ]
  },
  "questions": [
    {
      "id": "memory_best",
      "text": "Tell me about your best cafe memory.",
      "signal": "memory",
      "rules": [
        {"match_any": ["latte", "foam", "silky", "maple", "vanilla", "fall", "cozy"], "apply": {"texture_creamy": 1, "finish_caramel": 1}},
        {"match_any": ["matcha", "ceremonial", "green"], "apply": {"coffee_no": 1}},
        {"match_any": ["yuzu", "lemon", "lime", "grapefruit", "orange", "berry", "sparkling", "tonic", "fizz", "summer", "refresh"], "apply": {"fruit_sour": 1, "texture_clear": 1, "finish_peel": 1}},
        {"match_any": ["strawberry", "blueberry", "pink", "layered", "pretty"], "apply": {"sweet_high": 1}}
      ]
    },
    {
      "id": "flavor_chase",
      "text": "What tastes are you chasing today?",
      "signal": "flavor",
      "rules": [
        {"match_any": ["yuzu", "lemon", "lime", "grapefruit", "orange", "citrus", "sour", "tart", "zesty", "peel", "bitter-sweet", "clean"], "apply": {"fruit_sour": 1, "finish_peel": 1}},
        {"match_any": ["maple", "caramel", "vanilla", "sweet", "cozy"], "apply": {"sweet_high": 1, "finish_caramel": 1}},
        {"match_any": ["strawberry", "blueberry", "fruity", "berry"], "apply": {"fruit_mellow": 1, "sweet_high": 1}},
        {"match_any": ["matcha", "green tea", "earthy", "grassy"], "apply": {"coffee_no": 1, "matcha_signal": 1}},
        {"match_any": ["coffee", "espresso", "caffeine", "energy"], "apply": {"coffee_yes": 1}}
      ]
    },
    {
      "id": "first_sip",
      "text": "Describe your perfect first sip.",
      "signal": "texture",
      "rules": [
        {"match_any": ["silky", "velvet", "cloud", "thick", "creamy", "foam", "hug", "round"], "apply": {"texture_creamy": 1}},
        {"match_any": ["crisp", "sparkling", "clean", "clear", "tonic", "breeze", "light", "airy"], "apply": {"texture_clear": 1}}
      ]
    },
    {
      "id": "finish_note",
      "text": "What do you want to taste last after it's gone?",
      "signal": "finish",
      "rules": [
        {"match_any": ["peel", "zest", "clean", "refresh", "bitter-sweet", "citrus"], "apply": {"finish_peel": 1}},
        {"match_any": ["caramel", "maple", "toast", "comfort", "warm", "sweet"], "apply": {"finish_caramel": 1, "texture_creamy": 1}}
      ]
    },
    {
      "id": "tiny_detail",
      "text": "What tiny detail would make you smile?",
      "signal": "accent",
      "rules": [
        {"match_any": ["layered", "pretty", "color", "swirl", "instagram"], "apply": {"instagram_star_hint": 1}},
        {"match_any": ["microfoam", "silk", "cloud", "foam"], "apply": {"texture_creamy": 1}},
        {"match_any": ["fizz", "sparkle", "bubbles"], "apply": {"texture_clear": 1}}
      ]
    },
    {
      "id": "curious_flavor",
      "text": "What's a flavor you've been curious about lately?",
      "signal": "discovery",
      "rules": [
        {"match_any": ["yuzu", "citrus", "tonic", "zest", "peel"], "apply": {"fruit_sour": 1, "discovery_pull": 1}},
        {"match_any": ["matcha", "strawberry", "blueberry", "maple"], "apply": {"discovery_pull": 1}},
        {"match_any": ["green tea", "earthy"], "apply": {"matcha_signal": 1}}
      ]
    },
    {
      "id": "change_usual",
      "text": "What would you change about your usual?",
      "signal": "delta",
      "rules": [
        {"match_any": ["cleaner", "lighter", "less sweet", "crisper"], "apply": {"texture_clear": 1, "sweet_low": 1}},
        {"match_any": ["richer", "creamier", "more sweet", "cozier"], "apply": {"texture_creamy": 1, "sweet_high": 1}}
      ]
    }
  ],
  "scoring": {
    "lock_threshold": 3,
    "weights_by_signal": {
      "texture_creamy": {"creamy": 3, "cozy": 1, "milky": 2},
      "texture_clear": {"not-milky": 3, "refreshing": 2, "light": 2, "airy": 1},
      "fruit_sour": {"sour": 3, "citrus": 3, "not-milky": 2, "bitter-sweet": 2},
      "fruit_mellow": {"creamy": 2, "fruity": 3, "sweet": 1},
      "sweet_high": {"sweet": 3, "dessert": 2, "dessert-adjacent": 1},
      "sweet_low": {"slightly-sweet": 2, "medium-sweet": 1},
      "coffee_no": {"no-coffee": 3, "light-caffeine": 1, "matcha": 2},
      "coffee_yes": {"caffeine": 3, "energizing": 2},
      "finish_peel": {"bitter-sweet": 2, "refreshing": 1, "citrus": 2},
      "finish_caramel": {"cozy": 2, "sweet": 1, "molasses": 1, "nutty": 1},
      "instagram_star_hint": {"instagram-star": 2},
      "discovery_pull": {"adventurous": 2},
      "matcha_signal": {"matcha": 3, "grassy": 2, "earthy": 2}
    }
  }
}